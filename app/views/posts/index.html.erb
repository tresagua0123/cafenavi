  
    <h3>投稿一覧</h3>
    <% @posts.each do |post| %>
    <li><a class="text-dark" href="/users/<%= post.user.id%>"><%= post.user.name %></a>
    LV.<%= post.user.posts.count %>
    <%= link_to post.content, post_path(post) %>
    <%= icon 'far', 'star'  %>
    (<%= post.liked_users.count.to_s + "いいね！"  %>)
  
        <% if current_user %>
        <% if current_user.already_liked?(post)  %>
        <% else %>
        <%= link_to 'いいね', post_likes_path(post), method: :create,
        class:"btn btn-info m-2" %>
        <% end %>   
        <% end %>
    </li>
    <% end %>


